<mvc:View xmlns="sap.m" 
 xmlns:m="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" 
 xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"  
 controllerName="apestech.ui.erp.controller.Login">
 <!--<Image class="bg"></Image> -->
	 <m:VBox class="loginForm">
		<f:SimpleForm>
			<f:content>
				<m:Label text="{i18n>Login_user}"/>
				<m:Input placeholder="{i18n>Login_userPlaceholder}" value="{/userid}"/>
			    <m:Label text="{i18n>Login_pass}"/>
			    <m:Input type="Password" placeholder="{i18n>Login_passPlaceholder}"  value="{/password}"/>
				<m:Button type="Accept" text="{i18n>Login}" press="loginPressHandle" />
				</f:content>
		</f:SimpleForm>
  </m:VBox>
 
</mvc:View>