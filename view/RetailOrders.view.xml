<core:View xmlns:m="sap.m" 
		   xmlns="sap.uxap" 
		   xmlns:core="sap.ui.core" 
		   xmlns:layout="sap.ui.layout" 
		   xmlns:f="sap.ui.layout.form" 
		   xmlns:table="sap.ui.table" 
		   xmlns:u="sap.ui.unified"
	controllerName="apestech.ui.erp.controller.retailOrders" height="100%">

	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true" showFooter="true">
		<headerTitle>
			<ObjectPageHeader objectTitle="零售单" objectSubtitle="零售单`s title">
				<actions>
					<ObjectPageHeaderActionButton text="save" icon="sap-icon://save" title="保存" press="onSubmit"/>
				</actions>
				<breadCrumbsLinks>
					<m:Link text="零售管理" press="handleLink1Press"/>
					<m:Link text="零售单" press="handleLink2Press"/>
				</breadCrumbsLinks>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:Label text="请在这边添加对于零售单的描述"/>
				<!--<m:VBox height="10px">-->
				<!--	<m:Label text="Achieved goals"/>-->
				<!--</m:VBox>-->
			</layout:VerticalLayout>
		</headerContent>
		
		<sections>
			<ObjectPageSection title="my section">
				<subSections>
					<ObjectPageSubSection title="Section 1" mode="Expanded" id="Section1">
						<blocks>
							<ObjectPageLazyLoader stashed="true" id="Section1stashed">
								<m:VBox class="sapUiSmallMargin">
									<f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
										<f:layout>
											<f:ResponsiveGridLayout adjustLabelSpan="false" 
												labelSpanXL="2" labelSpanL="2" labelSpanM="2" labelSpanS="2" 
												emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" 
												columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="true"/>
										</f:layout>
										<f:formContainers>
											<f:FormContainer name="testOne">
												<f:formElements>
													<f:FormElement label="Date">
														<f:fields>
															<m:DatePicker id="DP1" placeholder="Enter Date ..." valueFormat="yyyy-MM-dd" displayFormat="long" change="handleChange"  value="{/DP1}"/>
															<m:TimePicker id="TP1" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="Enter Time ..." change="handleChange" value="{/TP1}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Street">
														<m:Input value="{/Street}"/>
													</f:FormElement>
													<f:FormElement label="ZIP Code/City">
														<m:Input value="{/ZIPCode}"/>
													</f:FormElement>
													<f:FormElement label="Country">
														<f:fields>
															<m:Select width="100%" selectedKey="{/Country}">
																<m:items>
																	<core:Item text="Germany" key="Germany"/>
																	<core:Item text="USA" key="USA"/>
																	<core:Item text="England" key="England"/>
																</m:items>
															</m:Select>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
											<f:FormContainer name="testOne">
												<f:formElements>
													<f:FormElement label="Name">
														<f:fields>
															<m:Input value="{/SupplierName}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Street">
														<m:Input value="{/Street}"/>
													</f:FormElement>
													<f:FormElement label="ZIP Code/City">
														<m:Input value="{/ZIPCode}"/>
													</f:FormElement>
													<f:FormElement label="Country">
														<f:fields>
															<m:Select width="100%" selectedKey="{/Country}"></m:Select>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
								</m:VBox>
							</ObjectPageLazyLoader>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			
			<ObjectPageSection title="my section">
				<subSections>
					<ObjectPageSubSection title="Section 2" mode="Expanded" id="Section2">
						<blocks>
							<ObjectPageLazyLoader stashed="true" id="Section2stashed">
								<m:VBox class="sapUiSmallMargin">
									<f:Form id="FormToolbar2" editable="true" ariaLabelledBy="Title1">
										<f:layout>
											<f:ResponsiveGridLayout adjustLabelSpan="false" 
												labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="3" 
												emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" 
												columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="true"/>
										</f:layout>
										<f:formContainers>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="Name">
														<f:fields>
															<m:Input value="{/SupplierName}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Street">
														<m:Input value="{/Street}"/>
													</f:FormElement>
													<f:FormElement label="ZIP Code/City">
														<m:Input value="{/ZIPCode}"/>
													</f:FormElement>
													<f:FormElement label="Country">
														<f:fields>
															<m:Select width="100%" selectedKey="{/Country}">
																<m:items>
																	<core:Item text="Germany" key="Germany"/>
																	<core:Item text="USA" key="USA"/>
																	<core:Item text="England" key="England"/>
																</m:items>
															</m:Select>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="Name">
														<f:fields>
															<m:Input value="{/SupplierName}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Street">
														<m:Input value="{/Street}"/>
													</f:FormElement>
													<f:FormElement label="ZIP Code/City">
														<m:Input value="{/ZIPCode}"/>
													</f:FormElement>
													<f:FormElement label="Country">
														<f:fields>
															<m:Select width="100%" selectedKey="{/Country}"></m:Select>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
											
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="Name">
														<f:fields>
															<m:Input value="{/SupplierName}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Street">
														<m:Input value="{/Street}"/>
													</f:FormElement>
													<f:FormElement label="ZIP Code/City">
														<m:Input value="{/ZIPCode}"/>
													</f:FormElement>
													<f:FormElement label="Country">
														<f:fields>
															<m:Select width="100%" selectedKey="{/Country}"></m:Select>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
								</m:VBox>
							</ObjectPageLazyLoader>
						</blocks>
						
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			
			<ObjectPageSection title="my section">
				<subSections>
					<ObjectPageSubSection title="Section 3" mode="Expanded" id="Section3">
						<blocks>
							<table:Table
								rows="{/ProductCollection}"
								title="Products"
								selectionMode="MultiToggle"
								visibleRowCount="7">
								<table:columns>
									<table:Column width="11rem">
										<m:Label text="Product Name" />
										<table:template>
											<m:Text text="{Name}" wrapping="false" />
										</table:template>
									</table:Column>
									<table:Column width="11rem">
										<m:Label text="Product Id" />
										<table:template>
											<m:Input value="{ProductId}"/>
										</table:template>
									</table:Column>
									<table:Column width="6rem" hAlign="End">
										<m:Label text="Quantity" />
										<table:template>
											<m:Label text="{Quantity}" />
										</table:template>
									</table:Column>
									<table:Column width="9rem">
										<m:Label text="Status" />
										<table:template>
											<m:ObjectStatus text="{Status}" state="{path: 'Available', formatter: '.formatAvailableToObjectState'}"/>
										</table:template>
									</table:Column>
									<table:Column width="9rem">
										<m:Label text="Price" />
										<table:template>
											<u:Currency value="{Price}" currency="{CurrencyCode}"/>
										</table:template>
									</table:Column>
									<table:Column width="12rem">
										<m:Label text="Supplier" />
										<table:template>
											<m:ComboBox value="{SupplierName}" items="{/Suppliers}">
												<core:Item text="{Name}"/>
											</m:ComboBox>
										</table:template>
									</table:Column>
									<table:Column width="9rem">
										<m:Label text="Image" />
										<table:template>
											<m:Link text="Show Image" href="{ProductPicUrl}" target="_blank"/>
										</table:template>
									</table:Column>
									<table:Column width="9rem">
										<m:Label text="Details" />
										<table:template>
											<m:Button text="Show Details" press="handleDetailsPress"/>
										</table:template>
									</table:Column>
									<table:Column width="7rem">
										<m:Label text="Heavy Weight" />
										<table:template>
											<m:CheckBox selected="{
												path: 'Heavy',
												type: 'sap.ui.model.type.String'
											}"/>
										</table:template>
									</table:Column>
									<table:Column width="12rem">
										<m:Label text="Category" />
										<table:template>
											<m:Select selectedKey="{Category}" items="{/Categories}">
												<core:Item text="{Name}" key="{Name}"/>
											</m:Select>
										</table:template>
									</table:Column>
									<table:Column width="6rem" hAlign="Center">
										<m:Label text="Status" />
										<table:template>
											<core:Icon src="{path: 'Available',	formatter: '.formatAvailableToIcon'}"/>
										</table:template>
									</table:Column>
									<table:Column width="11rem" hAlign="Center">
										<m:Label text="Delivery Date" />
										<table:template>
											<m:DatePicker value="{
												path: 'DeliveryDate',
												type: 'sap.ui.model.type.Date',
												formatOptions: {source: {pattern: 'timestamp'}}
											}"/>
										</table:template>
									</table:Column>
								</table:columns>
							</table:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		
		<footer>
			<m:OverflowToolbar id="otbFooter">
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Accept" press="showSuccessMessage">
					<m:layoutData><m:OverflowToolbarLayoutData moveToOverflow="false" /></m:layoutData>
				</m:Button>
				<m:Button type="Reject" text="Reject" press="showErrorMessage"/>
				<m:OverflowToolbarButton text="Delete" icon="sap-icon://delete"/>
				<m:OverflowToolbarButton text="Edit" icon="sap-icon://edit"/>
				<m:OverflowToolbarButton text="Add" icon="sap-icon://add"/>
				<m:Button id="save" icon="sap-icon://save" text="Save" type="Emphasized" visible="true" press="onSubmit" /> 

			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</core:View>