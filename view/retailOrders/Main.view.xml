<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core" controllerName="apestech.ui.erp.controller.retailOrders.Main1">

	<forms:SimpleForm>
		<forms:content>
			<core:Title text="日期控件"/>
			<Label text="simple DatePicker" labelFor="DP1" class=""/>
			<DatePicker id="DP1" placeholder="Enter Date ..." valueFormat="yyyy-MM-dd" displayFormat="long" change="handleChange" class="sapUiSmallMarginBottom" value="{/DP1}"/>
			<TimePicker id="TP1" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="Enter Time ..." change="handleChange" class="sapUiSmallMarginBottom" value="{/TP1}"/>
	
			<Label text="Date Time" class=""/>
			<DateTimePicker placeholder="Enter Date &amp; Time ..." class="sapUiSmallMarginBottom" value="{/DTP1}"/>
		</forms:content>

		<core:Title text="下拉控件"/>
		<Label text="单列下拉控件"/>
		<ComboBox>
			<!-- <ComboBox items="{
				path: '/CountriesCollection',
				sorter: { path: 'text' }
			}" -->
			<core:Item key="{key}" text="{text}"/>
		</ComboBox>

		<Label text="两列下拉控件"/>
		<ComboBox showSecondaryValues="true" items="{ path: '/CountriesCollection',  sorter: { path: 'text' } }">
			<core:ListItem key="{key}" text="{text}" additionalText="{key}"/>
		</ComboBox>

		<Label text="MultiInput"/>
		<MultiInput id="multiInput" suggestionItems="{ path: '/ProductCollection', sorter: { path: 'Name' } }" showValueHelp="false">
			<core:Item key="{ProductId}" text="{Name}"/>
		</MultiInput>

		<core:Title text="General"/>
		<Label text="Job classification"/>
		<Input  value="{/jobClassification}"/>

		<Label text="Pay Grade"/>
		<Input value="Salary Grade 18 (GR-14)"/>

		<Label text="Job title"/>
		<Input value="Developer"/>

		<Label text="Local Job Title"/>
		<Label text="Ui Developer"/>

		<core:Title text="Rating"/>
		<Label text="Employee Class"/>
		<Input value="Employee"/>

		<Label text="FTE"/>
		<Input value="1"/>

		<Label text="Standard Weekly Hours"/>
		<Input value="40"/>

		<core:Title text="General"/>
		<Label text="Job classification"/>
		<Input value="Senior Ui Developer (UIDEV-SR)"/>

		<Label text="Pay Grade"/>
		<Input value="Salary Grade 18 (GR-14)"/>

		<Label text="Job title"/>
		<Input value="Developer"/>

		<Label text="Local Job Title"/>
		<Label text="Ui Developer"/>

		<core:Title text="Rating"/>
		<Label text="Employee Class"/>
		<Input value="Employee"/>

		<Label text="FTE"/>
		<Input value="1"/>

		<Label text="Standard Weekly Hours"/>
		<Input value="40"/>
	</forms:SimpleForm>

	<Bar id="__bar0">
	    <contentRight>
	        <Button text="save" icon="sap-icon://save" press="onSubmit"/>
	    </contentRight>
	</Bar>
</mvc:View>