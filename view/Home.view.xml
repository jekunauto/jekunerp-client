<mvc:View xmlns="sap.m" 
		  xmlns:mvc="sap.ui.core.mvc" 
		  xmlns:l="sap.ui.layout" 
		  xmlns:core="sap.ui.core" 
		  xmlns:custom="apestech.ui.erp.controls" 
		  controllerName="apestech.ui.erp.controller.Home">
	<Page showHeader="true" title="零售单" >
		<subHeader>
			<Bar>
				<contentLeft>
					<ToggleButton text="Pressed" enabled="true" pressed="true" press="onPress"/>
					<ToggleButton text="Pressed &amp; Disabled" enabled="false" pressed="true" press="onPress"/>
				</contentLeft>
				<contentRight>
					<ToggleButton icon="sap-icon://action" press="onPress"/>
					<ToggleButton icon="sap-icon://home" enabled="false" press="onPress"/>
				</contentRight>
			</Bar>
		</subHeader>
		
		<content>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<Label text="Product" labelFor="productInput"/>
					<Input id="productInput" type="Text" placeholder="Enter Product ..." showSuggestion="true" suggestionItems="{/ProductCollection}" fieldWidth="25%">
						<suggestionItems>
							<core:ListItem text="{Name}" additionalText="{SupplierName}"/>
						</suggestionItems>
					</Input>
				</l:content>
			</l:VerticalLayout>
		</content>
	
		<footer>
			<Bar>
				<contentLeft>
					<!-- visible 控制按钮是否可以显示  enabled="false" 控制按钮点击-->
					<Button type="Accept" text="Accept" icon="sap-icon://save" enabled="false"/>
					<Button id="save" icon="sap-icon://save" text="Save" type="Emphasized" visible="true" press="handleSavePress"/> 
					<Button id="cancel" text="Cancel" visible="true" press="handleCancelPress"/>
					
					<Button type="Reject" text="Reject" icon="sap-icon://delete"/>
					
					<Button text="save" icon="sap-icon://save"/>
					
					<Button text="Delete" icon="sap-icon://delete"/>
					<Button text="Edit" icon="sap-icon://edit"/>
				</contentLeft>
				
			<!--	<contentRight>
					<Button id="save" icon="sap-icon://save" text="Save" type="Emphasized" visible="true" press="handleSavePress" /> 
					<Button id="cancel" text="Cancel" visible="true" press="handleCancelPress" />
					
					<Button type="Accept" text="Accept">
						<layoutData><OverflowToolbarLayoutData moveToOverflow="false" /></layoutData>
					</Button>
					
					<OverflowToolbarButton text="save" icon="sap-icon://save"/>
					
					<OverflowToolbarButton text="Delete" icon="sap-icon://delete"/>
					<OverflowToolbarButton text="Edit" icon="sap-icon://edit"/>
				
				</contentRight>-->
			</Bar>
		</footer>
	</Page>
</mvc:View>